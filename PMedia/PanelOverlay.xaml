                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4eadfe">End of playlist</TextBlock>
                        </MenuItem.Header>
                    </MenuItem>

                </MenuItem>

            </MenuItem>

            <MenuItem VerticalAlignment="Top" ClipToBounds="True" Margin="0" Height="23" Style="{DynamicResource SimpleMenuItem}">

                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/PMedia;component/Resources/btnPlaylist.png" Margin="0,0,0,0" Height="15" Width="15"/>
                </MenuItem.Icon>

                <MenuItem.Header>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4eadfe">Playlist</TextBlock>
                </MenuItem.Header>

                <MenuItem x:Name="MenuPlaylistAutoplay" IsCheckable="true" BorderThickness="1,1,1,0" Background="#333333" Margin="0,0,0,0" Height="22" Style="{DynamicResource SimpleMenuItem}">

                    <MenuItem.Icon>
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/PMedia;component/Resources/btnSwitch.png" Height="15" Width="15"/>
                    </MenuItem.Icon>

                    <MenuItem.Header>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4eadfe" Text="{Binding Path=AutoPlayText}"></TextBlock>
                    </MenuItem.Header>

                </MenuItem>

                <MenuItem x:Name="MenuPlaylistSliderAutoplay" Header="Jump" Style="{DynamicResource SimpleMenuItem}">
                    <MenuItem.Template>
                        <ControlTemplate TargetType="{x:Type MenuItem}">
                            <Slider Name="SliderAutoplay" 
                                    IsSnapToTickEnabled="True"
                                    Minimum="1" 
                                    Maximum="120" 
                                    TickFrequency="1" 
                                    Background="#333333"
                                    Width="100" 
                                    Value="5"
                                    ValueChanged="SliderAutoplay_ValueChanged"
                                    Loaded="SliderAutoplay_Loaded"/>
                        </ControlTemplate>
                    </MenuItem.Template>
                </MenuItem>

                <MenuItem x:Name="MenuPlaylistSeparator01" BorderThickness="1,0,1,0" Background="#1d1d1d" Margin="0,0,0,0" MinWidth="115" Height="2" Style="{DynamicResource SimpleMenuItem}"/>

                <MenuItem x:Name="MenuPlaylistNext" BorderThickness="1,0,1,0" Background="#333333" Margin="0,0,0,0" Height="22" Style="{DynamicResource SimpleMenuItem}">
                    <MenuItem.Icon>
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/PMedia;component/Resources/btnNext.png" Height="16" Width="16"/>
                    </MenuItem.Icon>
                    <MenuItem.Header>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4eadfe">Next</TextBlock>
                    </MenuItem.Header>
                </MenuItem>

                <MenuItem x:Name="MenuPlaylistPrevious" BorderThickness="1,0,1,0" Background="#333333" Margin="0,0,0,0" Height="22" Style="{DynamicResource SimpleMenuItem}">
                    <MenuItem.Icon>
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/PMedia;component/Resources/btnPrevious.png" Height="16" Width="16"/>
                    </MenuItem.Icon>
                    <MenuItem.Header>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4eadfe">Previous</TextBlock>
                    </MenuItem.Header>
                </MenuItem>

