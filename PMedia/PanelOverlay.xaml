                    <MenuItem.Icon>
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/PMedia;component/Resources/btnVideoList.png" Height="16" Width="16" />
                    </MenuItem.Icon>
                    <MenuItem.Header>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4eadfe">Video List</TextBlock>
                    </MenuItem.Header>
                </MenuItem>

                <MenuItem x:Name="MenuPlaylistSeparator02" BorderThickness="1,0,1,0" Background="#1d1d1d" Margin="0,0,0,0" Height="2" Style="{DynamicResource SimpleMenuItem}"/>

                <MenuItem x:Name="MenuPlaylistRecent" BorderThickness="1,0,1,1" Background="#333333" Margin="0,0,0,0" Height="22" Style="{DynamicResource SimpleMenuItem}">
                    <MenuItem.Icon>
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/PMedia;component/Resources/btnRecent.png" Height="16" Width="16"/>
                    </MenuItem.Icon>
                    <MenuItem.Header>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4eadfe">Recent</TextBlock>
                    </MenuItem.Header>
                </MenuItem>

            </MenuItem>

            <MenuItem x:Name="MenuAbout" VerticalAlignment="Top" ClipToBounds="True" Margin="0" Height="23" Style="{DynamicResource SimpleMenuItem}">

                <MenuItem.Icon>
                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="pack://application:,,,/PMedia;component/Resources/btnAbout.png" Height="15" Width="15"/>
                </MenuItem.Icon>

                <MenuItem.Header>
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#4eadfe">About</TextBlock>
                </MenuItem.Header>

            </MenuItem>

        </Menu>

        <local:OutlinedTextBlock x:Name="LabelOverlay"
                             Stroke="Black" 
                             Grid.Row="1"
                             ClipToBounds="False"
                             FontSize="30" 
                             Fill="White"
                             StrokePosition="Outside"
                             Margin="20,0,0,0"
                             StrokeThickness="1" Text="">
        </local:OutlinedTextBlock>

        <Grid x:Name="BottomMenu" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="40">

            <Grid.Background>
                <SolidColorBrush Color="#333333" Opacity="0.7" />
            </Grid.Background>

            <StackPanel x:Name="labelTitlePanel" VerticalAlignment="Top" ClipToBounds="true" Margin="40,0,120,0" Height="15">
                <Label x:Name="labelTitle" Foreground="#4eadfe" Padding="0,0,0,0" Margin="0,0,0,0" FontSize="10" Height="15"/>
            </StackPanel>

            <Button x:Name="btnPlay" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Transparent" Focusable="False" Margin="5,0,0,5" Width="30" Height="30" Style="{DynamicResource SimpleButton}">
                <Image x:Name="btnPlayImage" Stretch="Fill" RenderOptions.BitmapScalingMode="HighQuality" Source="/PMedia;component/Resources/btnPlay.png" Height="25" Width="25"/>
            </Button>

            <Button x:Name="btnBackward" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Transparent" Focusable="False" Margin="36,0,0,5" Width="20" Height="20" Style="{DynamicResource SimpleButton}">
                <Image x:Name="btnBackwardImage" RenderOptions.BitmapScalingMode="HighQuality" Source="/PMedia;component/Resources/btnBackward.png" Height="15" Width="15"/>
            </Button>

            <Button x:Name="btnStop" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Transparent" Focusable="False" Margin="57,0,0,5" Width="20" Height="20" Style="{DynamicResource SimpleButton}">
                <Image x:Name="btnStopImage" RenderOptions.BitmapScalingMode="HighQuality" Source="/PMedia;component/Resources/btnStop.png" Height="15" Width="15"/>
            </Button>

            <Button x:Name="btnForward" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Transparent" Focusable="False" Margin="78,0,0,5" Width="20" Height="20" Style="{DynamicResource SimpleButton}">
                <Image x:Name="btnForwardImage" RenderOptions.BitmapScalingMode="HighQuality" Source="/PMedia;component/Resources/btnForward.png" Height="15" Width="15"/>
            </Button>

            <Button x:Name="btnOpenFile" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Transparent" BorderBrush="Transparent" Focusable="False" Margin="98,0,0,5" Width="20" Height="20" Style="{DynamicResource SimpleButton}">
                <Image x:Name="btnOpenFileImage" RenderOptions.BitmapScalingMode="HighQuality" Source="Resources/btnOpen.png" Height="15" Width="15"/>
            </Button>

            <Label x:Name="labelPosition" Content="00:00:00" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Foreground="#4eadfe" Padding="0,0,0,0" Margin="123,0,0,8" FontFamily="Arial" FontSize="11.5" Width="48" Height="13"/>
            <local:FormattedSlider x:Name="SliderMedia" Value="0" Grid.Row="0" VerticalAlignment="Bottom" Maximum="1" SmallChange="1" Minimum="0" LargeChange="1" TickFrequency="1" AutoToolTipPlacement="TopLeft" AutoToolTipFormat="%%" IsMoveToPointEnabled="True" Margin="171,0,198,7" Template="{DynamicResource HorizontalSlider}" Thumb.DragStarted="SliderMedia_DragStarted" Thumb.DragCompleted="SliderMedia_DragCompleted"/>
            <Label x:Name="labelLenght" Content="00:00:00" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="#4eadfe" Padding="0,0,0,0" Margin="0,0,145,8" FontFamily="Arial" FontSize="11.5" Width="48" Height="13"/>

            <Button  HorizontalAlignment="Right" Margin="0,0,121,5" Grid.Row="0" VerticalAlignment="Bottom" Width="20" Height="20" x:Name="btnMute" Background="Transparent" BorderBrush="Transparent" Focusable="False" Style="{DynamicResource SimpleButton}">
                <Image x:Name="btnMuteImage" RenderOptions.BitmapScalingMode="HighQuality" Source="/PMedia;component/Resources/btnVolume1.png" Height="15" Width="15"/>
            </Button>

            <local:VolumeControl x:Name="VolumeSlider" HorizontalAlignment="Right" Height="27" Margin="0,0,37,7" Grid.Row="0" VerticalAlignment="Bottom" Width="78"/>

            <Button Style="{DynamicResource SimpleButton}" Margin="0,0,5,5" Grid.Row="0" VerticalAlignment="Bottom" Height="30" x:Name="btnFullscreen" Background="Transparent" BorderBrush="Transparent" Focusable="False" HorizontalAlignment="Right" Width="30">
                <Image x:Name="btnFullscreenImage" Stretch="Fill" RenderOptions.BitmapScalingMode="HighQuality" Source="/PMedia;component/Resources/btnFullScreenOn.png" Height="25" Width="25"/>
            </Button>

        </Grid>
        
    </Grid>
</Window>
