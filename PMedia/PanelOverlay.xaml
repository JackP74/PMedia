                        </MenuItem.Header>
                    </MenuItem>

                    <MenuItem x:Name="MenuSettingsShutDownEndPlaylist" IsCheckable="True" BorderThickness="1,0,1,1" Background="#333333" Margin="0,0,0,0" Height="22" Style="{DynamicResource SimpleMenuItem}">
