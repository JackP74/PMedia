<UserControl x:Class="PMedia.VolumeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PMedia"
             mc:Ignorable="d" Height="30" Width="80">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PMedia;component/Resources/VolumeSliderStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid Margin="0,0,0,0">

        <Label x:Name="labelVolume" Content="0%" HorizontalAlignment="Left" VerticalAlignment="Top" Height="18" Width="40" Padding="0,0,0,0"/>
        <Slider x:Name="VolumeSlider" Maximum="100" Minimum="0" SmallChange="1" Height="Auto" IsMoveToPointEnabled="True"/>
       
    </Grid>
</UserControl>
